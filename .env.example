# Airflow MCP Server Configuration
# Copy this file to .env and update the values

# Required - Airflow connection settings
AIRFLOW_BASE_URL=http://localhost:8080
AIRFLOW_USERNAME=admin
AIRFLOW_PASSWORD=admin

# Optional - Authentication method (basic or jwt)
AIRFLOW_AUTH_TYPE=basic

# Optional - For JWT authentication (use instead of username/password)
# AIRFLOW_JWT_TOKEN=your_jwt_token_here

# Optional - Access level (read_only or full)
AIRFLOW_ACCESS_LEVEL=read_only

# Optional - SSL verification (true or false)
AIRFLOW_VERIFY_SSL=true

# Optional - Request timeout in seconds
AIRFLOW_TIMEOUT=30